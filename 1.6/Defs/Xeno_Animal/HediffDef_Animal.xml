<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
	<HediffDef>
		<defName>Moka_Blubber</defName>
		<label>blubber</label>
		<description>This pawn has large fat stores capable of accumulating usable fat for dealing with starvation.</description>
		<hediffClass>MokaDevSpace.Hediff_Blubber</hediffClass>
		<initialSeverity>1</initialSeverity>
		<everCurableByItem>false</everCurableByItem>
		<comps>
			<li Class="MokaDevSpace.HediffCompProperties_Blubber">
				<startThreshold>0.8</startThreshold>
				<conversionRate>1.1</conversionRate>
				<maxBlubber>0.4</maxBlubber>
				<starvationThreshold>0.1</starvationThreshold>
				<starvationSpeed>0.002</starvationSpeed>
				<conversionSpeed>0.002</conversionSpeed>

				<speedUpCurve>
					<points>
						<li>(0, 0)</li>
						<li>(0.10, -0.01)</li>
						<li>(0.20, -0.04)</li>
						<li>(0.30, -0.08)</li>
						<li>(0.40, -0.10)</li>
					</points>
				</speedUpCurve>

				<tirednessReductionCurve>
					<points>
						<li>(0, 0)</li>
						<li>(0.10, 0.04)</li>
						<li>(0.20, 0.08)</li>
						<li>(0.30, 0.12)</li>
						<li>(0.40, 0.15)</li>
					</points>
				</tirednessReductionCurve>

				<learningRateCurve>
					<points>
						<li>(0, 0)</li>
						<li>(0.10, 5)</li>
						<li>(0.20, 10)</li>
						<li>(0.30, 20)</li>
						<li>(0.40, 30)</li>
					</points>
				</learningRateCurve>
			</li>
		</comps>
	</HediffDef>

	<HediffDef>
		<defName>Moka_RousingRoar</defName>
		<label>rousing roar</label>
		<description>By encouraging and commanding nearby allies, this person can enhance their focus in combat and thus their battle performance.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<showRemainingTime>True</showRemainingTime>
			</li>
			<li Class="HediffCompProperties_DisappearsOnDeath"/>
			<li Class="HediffCompProperties_GiveHediffsInRange">
				<range>9.9</range>
				<mote>Mote_CombatCommand</mote>
				<hideMoteWhenNotDrafted>true</hideMoteWhenNotDrafted>
				<targetingParameters>
					<canTargetBuildings>false</canTargetBuildings>
					<canTargetAnimals>false</canTargetAnimals>
					<canTargetMechs>false</canTargetMechs>
					<onlyTargetColonists>true</onlyTargetColonists>
				</targetingParameters>
				<hediff>Moka_RousingRoarBuff</hediff>
			</li>
		</comps>
		<isBad>false</isBad>
	</HediffDef>

	<HediffDef>
		<defName>Moka_RousingRoarBuff</defName>
		<label>rousing roar</label>
		<description>Combat abilities are boosted thanks to being near someone who is using the combat command ability.</description>
		<debugLabelExtra>other</debugLabelExtra>
		<hediffClass>HediffWithComps</hediffClass>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<showRemainingTime>false</showRemainingTime>
			</li>
			<li Class="HediffCompProperties_DisappearsOnDeath"/>
			<li Class="HediffCompProperties_Link">
				<requireLinkOnOtherPawn>false</requireLinkOnOtherPawn>
				<maxDistance>10</maxDistance>
				<customMote>Mote_CombatCommandLinkLine</customMote>
			</li>
		</comps>
		<isBad>false</isBad>
		<stages>
			<li>
    			<painFactor>0.25</painFactor>
				<!-- <painOffset>0.12</painOffset> -->
				<statOffsets>
					<StaggerDurationFactor>-0.3</StaggerDurationFactor>
					<IncomingDamageFactor>-0.2</IncomingDamageFactor>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
            			<postFactor>1.05</postFactor>
					</li>
				</capMods>
				<!-- <statOffsets>
					<GlobalLearningFactor>0.1</GlobalLearningFactor>
					<WorkSpeedGlobal>0.11</WorkSpeedGlobal>
					<NegotiationAbility>0.05</NegotiationAbility>
					<ResearchSpeed>0.2</ResearchSpeed>
					<socialFightChanceFactor>-0.2</socialFightChanceFactor>
				</statOffsets> -->
			</li>
		</stages>
	</HediffDef>

