<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
	<HediffDef>
		<defName>Moka_FloralRegen</defName>
		<label>floral regen</label>
		<description>This pawn's cells will slowly regenerate from damage and mising limbs over a month to a year.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<initialSeverity>1</initialSeverity>
		<everCurableByItem>false</everCurableByItem>
		<comps>
			<li Class="MokaDevSpace.HediffCompProperties_FloralRegen">
				<daysToHeal>30</daysToHeal>
				<daysToGenerate>60</daysToGenerate>
				<amountToHeal>5</amountToHeal>
			</li>
		</comps>
	</HediffDef>
  
	<HediffDef>
		<defName>Moka_BuildingBark</defName>
		<label>building bark</label>
		<description>Until the age of 80, each year of growth makes this pawn a little bit slower, but gives more resistance to staggering and blunt damage.</description>
		<hediffClass>MokaDevSpace.Hediff_Bark</hediffClass>
		<initialSeverity>1</initialSeverity>
		<everCurableByItem>false</everCurableByItem>
		<comps>
			<li Class="MokaDevSpace.HediffCompProperties_Bark">
				<maxAge>80</maxAge>
				<!-- adjustment curves -->
				<slowdownCurve>
					<points>
						<li>(0, 0)</li>
						<li>(0.10, -0.02)</li>
						<li>(0.20, -0.06)</li>
						<li>(0.30, -0.12)</li>
						<li>(0.40, -0.15)</li>
					</points>
				</slowdownCurve>
				<bluntProtectionCurve>
					<points>
						<li>(0, 0)</li>
						<li>(0.10, 0.04)</li>
						<li>(0.20, 0.08)</li>
						<li>(0.30, 0.12)</li>
						<li>(0.40, 0.15)</li>
					</points>
				</bluntProtectionCurve>
				<staggerStunCurve>
					<points>
						<li>(0, 0)</li>
						<li>(0.10, 5)</li>
						<li>(0.20, 10)</li>
						<li>(0.30, 20)</li>
						<li>(0.40, 30)</li>
					</points>
				</staggerStunCurve>
			</li>
		</comps>
	</HediffDef>
  
	<HediffDef>
		<defName>Moka_WovenXylem</defName>
		<label>woven xylem</label>
		<description>This pawn can take in water from lakes, rivers, oceans and rain to boost certain traits.</description>
		<hediffClass>MokaDevSpace.Hediff_Xylem</hediffClass>
		<initialSeverity>1</initialSeverity>
		<everCurableByItem>false</everCurableByItem>
		<comps>
			<li Class="MokaDevSpace.HediffCompProperties_Xylem">
				<maxStorage>4</maxStorage>
				<evaporationSpeed>0.001</evaporationSpeed>
				<intakeSpeed>0.005</intakeSpeed>
				<!-- adjustment curves -->
				<injuryHealCurve>
					<points>
						<li>(0, 0)</li>
						<li>(0.10, -0.02)</li>
						<li>(0.20, -0.06)</li>
						<li>(0.30, -0.12)</li>
						<li>(0.40, -0.16)</li>
					</points>
				</injuryHealCurve>
				<flameDMGCurve>
					<points>
						<li>(0, 0)</li>
						<li>(0.10, 0.04)</li>
						<li>(0.20, 0.08)</li>
						<li>(0.30, 0.12)</li>
						<li>(0.40, 0.15)</li>
					</points>
				</flameDMGCurve>
				<fertilityCurve>
					<points>
						<li>(0, 0)</li>
						<li>(0.10, 5)</li>
						<li>(0.20, 10)</li>
						<li>(0.30, 20)</li>
						<li>(0.40, 30)</li>
					</points>
				</fertilityCurve>
				<nutritionCapCurve>
					<points>
						<li>(0, 0)</li>
						<li>(0.10, 0.5)</li>
						<li>(0.20, 0.10)</li>
						<li>(0.30, 0.20)</li>
						<li>(0.40, 0.30)</li>
					</points>
				</nutritionCapCurve>
			</li>
		</comps>
	</HediffDef>

	<HediffDef>
		<defName>Moka_LumenCraving</defName>
		<label>lumen craving</label>
		<description>Due to a lack of lumen, this person's body is eating at the excess energy stored in cells. This causes disorientation and an increase in nutrition need.</description>
		<hediffClass>MokaDevSpace.Hediff_LumenCraving</hediffClass>
		<defaultLabelColor>(1, 0.2, 0.2)</defaultLabelColor>
		<initialSeverity>0.01</initialSeverity>
		<maxSeverity>1</maxSeverity>
		<everCurableByItem>false</everCurableByItem>
		<stages>
			<li>
				<label>minor</label>
				<painOffset>0.05</painOffset>
        		<hungerRateFactorOffset>0.2</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.9</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>moderate</label>
				<minSeverity>0.35</minSeverity>
				<painOffset>0.1</painOffset>
        		<hungerRateFactorOffset>0.5</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.8</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>major</label>
				<minSeverity>0.7</minSeverity>
				<painOffset>0.15</painOffset>
		        <hungerRateFactorOffset>1</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.5</setMax>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="MokaDevSpace.HediffCompProperties_SeverityFromLumens">
				<severityPerHourEmpty>0.05</severityPerHourEmpty>
				<severityPerHourLoaded>-0.1</severityPerHourLoaded>
			</li>
		</comps>
	</HediffDef>

	<HediffDef>
		<defName>Moka_LumenCravingFatal</defName>
		<label>lumen withdrawal</label>
		<description>Due to a lack of hemogen, this person's body is breaking down hemogen reserves in their bone marrow. This causes disorientation and a painful craving for human blood.</description>
		<hediffClass>MokaDevSpace.Hediff_LumenCraving</hediffClass>
		<defaultLabelColor>(1, 0.2, 0.2)</defaultLabelColor>
		<initialSeverity>0.01</initialSeverity>
		<maxSeverity>1</maxSeverity>
		<lethalSeverity>1</lethalSeverity>
		<everCurableByItem>false</everCurableByItem>
		<stages>
			<li>
				<label>minor</label>
				<painOffset>0.05</painOffset>
        		<hungerRateFactorOffset>0.4</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.9</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>moderate</label>
				<minSeverity>0.35</minSeverity>
				<painOffset>0.1</painOffset>
        		<hungerRateFactorOffset>1</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.8</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>major</label>
				<minSeverity>0.7</minSeverity>
				<painOffset>0.15</painOffset>
        		<hungerRateFactorOffset>1.5</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.5</setMax>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="MokaDevSpace.HediffCompProperties_SeverityFromLumens">
				<severityPerHourEmpty>0.05</severityPerHourEmpty>
				<severityPerHourLoaded>-0.1</severityPerHourLoaded>
			</li>
		</comps>
	</HediffDef>
	
</Defs>