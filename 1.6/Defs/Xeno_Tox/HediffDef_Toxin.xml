<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
	<HediffDef>
		<defName>Moka_ToxonRage</defName>
		<label>toxic rage</label>
		<hediffClass>HediffWithComps</hediffClass>
		<description>genetically-induced invisibility. Specialized skin pigments refract light and disrupt nearby perception, rendering the carrier invisible to others regardless of visual ability.</description>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<showRemainingTime>True</showRemainingTime>
			</li>
			<li Class="HediffCompProperties_DisappearsOnDeath"/>
		</comps>
    	<stages>
			<li>
				<label>boosted</label>
				<minSeverity>3</minSeverity>
				<painOffset>0.12</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.05</offset>
					</li>
				</capMods>
				<statOffsets>
					<GlobalLearningFactor>0.1</GlobalLearningFactor>
					<WorkSpeedGlobal>0.11</WorkSpeedGlobal>
					<NegotiationAbility>0.05</NegotiationAbility>
					<ResearchSpeed>0.2</ResearchSpeed>
					<!-- <socialFightChanceFactor>-0.2</socialFightChanceFactor> -->
				</statOffsets>
			</li>
		</stages>
	</HediffDef>

	<HediffDef Name="Moka_Stinger_Base" Abstract="True">
		<description>genetically-induced invisibility. Specialized skin pigments refract light and disrupt nearby perception, rendering the carrier invisible to others regardless of visual ability.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<initialSeverity>0.001</initialSeverity>
		<maxSeverity>1</maxSeverity>
		<tendable>false</tendable>
		<duplicationAllowed>false</duplicationAllowed>
	</HediffDef>

	<HediffDef ParentName="Moka_Stinger_Base">
		<defName>Moka_StingerNumb</defName>
		<label>stinger numb</label>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>stinger jab</label>
						<capacities>
							<li>Scratch</li>
						</capacities>
						<power>8</power>
						<cooldownTime>2</cooldownTime>
						<soundMeleeHit>MeleeHit_BionicPunch</soundMeleeHit>
						<soundMeleeMiss>MeleeMiss_BionicPunch</soundMeleeMiss>
					</li>
				</tools>
			</li>
			<li Class="HediffCompProperties_RemoveIfOtherHediff">
				<hediffs>
					<li>Moka_StingerTox</li>
				</hediffs>
			</li>
		</comps>
	</HediffDef>

	<HediffDef ParentName="Moka_Stinger_Base">
		<defName>Moka_StingerTox</defName>
		<label>stinger tox</label>
		<hediffClass>MokaDevSpace.Hediff_ToxonStinger</hediffClass>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>toxic stab</label>
						<capacities>
							<li>ScratchToxic</li>
						</capacities>
						<power>8</power>
						<cooldownTime>2</cooldownTime>
						<soundMeleeHit>MeleeHit_BionicPunch</soundMeleeHit>
						<soundMeleeMiss>MeleeMiss_BionicPunch</soundMeleeMiss>
					</li>
				</tools>
			</li>
			<li Class="HediffCompProperties_Disappears">
				<showRemainingTime>True</showRemainingTime>
			</li>
		</comps>
	</HediffDef>
	
	<HediffDef>
		<defName>Moka_ToxonBrain</defName>
		<label>tox cognition</label>
		<description>This pawn has large fat stores capable of accumulating usable fat for dealing with starvation.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<initialSeverity>1</initialSeverity>
		<everCurableByItem>false</everCurableByItem>
		<comps>
			<li Class="MokaDevSpace.HediffCompProperties_ToxonBrain">
			</li>
		</comps>
    	<stages>
			<li>
				<label>shrivelled</label>
				<minSeverity>1</minSeverity>
				<painOffset>-0.02</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.10</offset>
					</li>
				</capMods>
				<statOffsets>
					<GlobalLearningFactor>-0.2</GlobalLearningFactor>
					<WorkSpeedGlobal>-0.3</WorkSpeedGlobal>
					<NegotiationAbility>-0.05</NegotiationAbility>
					<ResearchSpeed>-0.1</ResearchSpeed>
					<!-- <socialFightChanceFactor>-0.2</socialFightChanceFactor> -->
				</statOffsets>
			</li>
			<li>
				<label>flat</label>
				<minSeverity>2</minSeverity>
				<painOffset>0</painOffset>
			</li>
			<li>
				<label>boosted</label>
				<minSeverity>3</minSeverity>
				<painOffset>0.12</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.05</offset>
					</li>
				</capMods>
				<statOffsets>
					<GlobalLearningFactor>0.1</GlobalLearningFactor>
					<WorkSpeedGlobal>0.11</WorkSpeedGlobal>
					<NegotiationAbility>0.05</NegotiationAbility>
					<ResearchSpeed>0.2</ResearchSpeed>
					<!-- <socialFightChanceFactor>-0.2</socialFightChanceFactor> -->
				</statOffsets>
			</li>
		</stages>
	</HediffDef>
	
</Defs>