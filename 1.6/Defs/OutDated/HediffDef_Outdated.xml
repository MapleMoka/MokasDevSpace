	<HediffDef>
		<defName>Moka_ToxicRage</defName>
		<label>toxic rage</label>
		<hediffClass>HediffWithComps</hediffClass>
		<description>genetically-induced invisibility. Specialized skin pigments refract light and disrupt nearby perception, rendering the carrier invisible to others regardless of visual ability.</description>
		<isBad>false</isBad>
		<comps>
			<li Class="MokaDevSpace.HediffCompProperties_PollutionLeech"/>
			<li Class="HediffCompProperties_Disappears">
				<showRemainingTime>True</showRemainingTime>
			</li>
			<li Class="HediffCompProperties_DisappearsOnDeath"/>
		</comps>
	</HediffDef>

	<HediffDef Name="Moka_SwitchingToxAttack_Base" Abstract="True">
		<!-- <label>crumbling mind</label> -->
		<hediffClass>HediffWithComps</hediffClass>
		<description>This person is experiencing a rapidly decaying mental state. Within a few days, they will be incapable of most work. With sufficient technology, like a healer mech serum, the condition can still be reversed. However, it will soon become permanent.</description>
		<initialSeverity>0.001</initialSeverity>
		<maxSeverity>1</maxSeverity>
		<!-- <isBad>true</isBad> -->
		<tendable>false</tendable>
		<duplicationAllowed>true</duplicationAllowed>
		<!-- <defaultInstallPart>Arm</defaultInstallPart> -->
	</HediffDef>
  
	<HediffDef ParentName="Moka_SwitchingToxAttack_Base">
		<defName>Moka_ToxAttackInactive</defName>
		<label>inactive tox attack</label>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>fist</label>
						<capacities>
							<li>Blunt</li>
						</capacities>
						<power>12</power>
						<cooldownTime>2</cooldownTime>
						<soundMeleeHit>MeleeHit_BionicPunch</soundMeleeHit>
						<soundMeleeMiss>MeleeMiss_BionicPunch</soundMeleeMiss>
					</li>
				</tools>
			</li>
			<li Class="MokaDevSpace.HediffCompProperties_ToxHediffsUp"/>
			<li Class="HediffCompProperties_ReplaceHediff">
				<hediffs>
					<li>
						<hediff>Moka_ToxAttackActive</hediff>
						<partsToAffect>
							<li>Waist</li>
							<!-- <li>Arm</li> -->
						</partsToAffect>
					</li>
				</hediffs>
				<!-- <message>{PAWN_nameDef}'s cognitive condition has become permanent.</message> -->
			</li>
		</comps>
	</HediffDef>
  
	<HediffDef ParentName="Moka_SwitchingToxAttack_Base">
		<defName>Moka_ToxAttackActive</defName>
		<label>active tox attack</label>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>fist</label>
						<capacities>
							<li>ScratchToxic</li>
						</capacities>
						<power>12</power>
						<cooldownTime>2</cooldownTime>
						<soundMeleeHit>MeleeHit_BionicPunch</soundMeleeHit>
						<soundMeleeMiss>MeleeMiss_BionicPunch</soundMeleeMiss>
					</li>
				</tools>
			</li>
			<li Class="MokaDevSpace.HediffCompProperties_ToxHediffsDown"/>
			<li Class="HediffCompProperties_ReplaceHediff">
				<hediffs>
					<li>
						<hediff>Moka_ToxAttackInactive</hediff>
						<partsToAffect>
							<li>Waist</li>
							<!-- <li>Arm</li> -->
						</partsToAffect>
					</li>
				</hediffs>
				<!-- <message>{PAWN_nameDef}'s cognitive condition has become permanent.</message> -->
			</li>
		</comps>
	</HediffDef>
  
